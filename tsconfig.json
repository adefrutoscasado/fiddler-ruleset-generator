{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./build",
    "lib": ["esnext", "dom"],
    "outDir": "build",
    "target": "es6",
    "allowJs": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    //"noEmit": true,
    "noImplicitReturns": true,
    "noImplicitUseStrict": false,
    "noImplicitAny": true,
    "strict": true,
    "sourceMap": true
  },
  "files": [
    "./src/global.d.ts"
  ],
  "include": [
      "./src/**/*"
  ]
}