{
  "compilerOptions": {

    "outDir": "build",
    "target": "es6",
    "allowJs": false,
    "module": "commonjs",
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    //"noEmit": true,
    "noImplicitReturns": true,
    "noImplicitUseStrict": false,
    "noImplicitAny": true,
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
  },
  "include": [
      "./src/**/*",
      "typings.d.ts"
  ]
}